<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:gravity="right"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_isLike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="点赞"
            android:layout_marginRight="20dp"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_marginRight="10dp"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:textStyle="bold"

            android:id="@+id/tv_isCollect"></TextView>

    </LinearLayout>

    　

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_content"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:text="111"
                android:textSize="18sp"
                android:textStyle="bold"

                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"></TextView>

            <TextView
                android:id="@+id/zuozhetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="1111"
                android:textColor="#000"
               ></TextView>

            <TextView
                android:id="@+id/fenshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:textSize="11sp"></TextView>

            <TextView
                android:id="@+id/jiagetiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F80707"
                android:visibility="gone"

                android:textSize="11sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="修改"
                android:textColor="@color/red"></TextView>

            <TextView
                android:id="@+id/delete"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="删除"
                android:textColor="@color/red"></TextView>

            <TextView
                android:id="@+id/tv_like"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="点赞"
                android:textColor="@color/red"></TextView>

            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="收藏"
                android:textColor="@color/red"></TextView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
